   <center>
      <GridPane alignment="CENTER" maxHeight="-Infinity" prefHeight="285.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="171.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="429.0" minWidth="10.0" prefWidth="429.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="161.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="161.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="82.0" prefWidth="171.0" text="     List Name/Title" GridPane.rowIndex="1">
               <font>
                  <Font name="Ink Free" size="15.0" />
               </font>
            </Label>
            <TextField id="nameList" fx:id="newListNameLabel" maxWidth="-Infinity" prefWidth="200.0" style="-fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="192.0" text="Creating a list" textAlignment="CENTER" GridPane.columnIndex="1">
               <font>
                  <Font name="Ink Free" size="24.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </center>
   <bottom>
      <Button id="submitNewList" alignment="CENTER" mnemonicParsing="false" onAction="#newNameSubmit" prefHeight="25.0" prefWidth="68.0" style="-fx-background-color: #ff77ff;" text="Submit" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
