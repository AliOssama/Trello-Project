<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="128.0" prefWidth="169.0" style="-fx-background-color: #ffd1dc;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CardViewController">
   <center>
      <Label fx:id="cardNameLabel" alignment="CENTER" prefHeight="51.0" prefWidth="87.0" text="CardName1" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
   </center>
   <right>
      <Button id="moveRight" mnemonicParsing="false" onAction="#moveRight" style="-fx-background-color: #ff77ff;" text="&gt;" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <Button id="moveUp" mnemonicParsing="false" onAction="#moveUp" style="-fx-background-color: #ff77ff;" text="^" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Button id="moveLeft" mnemonicParsing="false" onAction="#moveLeft" style="-fx-background-color: #ff77ff;" text="&lt;" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <VBox alignment="TOP_CENTER" prefHeight="105.0" prefWidth="169.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="moveDown" mnemonicParsing="false" onAction="#moveDown" style="-fx-background-color: #ff77ff;" text="v" />
            <Button id="editCard" mnemonicParsing="false" onAction="#editCard" style="-fx-background-color: #ff77ff; -fx-background-radius: 10;" text="Edit card" />
            <Button id="removeCard" mnemonicParsing="false" onAction="#removeCard" style="-fx-background-color: #ff77ff; -fx-background-radius: 10;" text="Remove Card" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
